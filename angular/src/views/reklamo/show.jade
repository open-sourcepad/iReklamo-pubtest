.row
  .col-sm-8
    .showback
      .showback-header
        .row
          .col-sm-8
            h4 {{ complaint.title }}
          .col-sm-4
            .pull-right
              h4
                span.label.label-info(ng-bind="complaint.category")

      .showback-content
        img(ng-src="http://localhost:3000/{{complaint.image_url}}" width="855")

  .col-sm-4
    .showback
      .row
        .col-sm-2
          i.fa.fa-user.fa-3x
        .col-sm-8.pl-0
          .user-name Anonymous User

      .row.mt-20.mb-20
        .col-sm-12
          | {{ complaint.description }}

      .row
        .col-sm-12
          | Like  Comment

      .row
        .col-sm-12
          .sm-row
            i.fa.fa-thumbs-o-up &nbsp;
              span.blueish {{ complaint.likes }} people
              | &nbsp;like this.
      .row
        .col-sm-12
          .sm-row
            .media
              .media-left
                a(href='#')
                  img.media-object(src='...', alt='...')

              .media-body
                h4.media-heading Media heading
                |       ...
